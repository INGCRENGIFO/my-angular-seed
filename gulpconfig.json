{
  "clean": [
    "dist/*",
    "!dist/.git",
    "!dist/*.service"
  ],
  "back": {
    "src": [
      "./app*/**/*",
      "config.js",
      "package.json",
      "server.js"
    ],
    "dest": "dist"
  },
  "front": {
    "src": {
      "others": [
        "public/app*/**/*.json"
      ],
      "css": [
        "public/assets/css/styles.css",
        "public/assets/**/*.css",
        "public/assets/css/responsive.css"
      ],
      "scripts": [
        "public/app/i18n/*.js",
        "public/app/**/*.js",
        "public/assets/**/*.js"
      ],
      "images": "public/assets/img/**/*",
      "html": "public/**/*.html"
    },
    "dest": {
      "others": "dist/public",
      "css": "dist/public/assets/css",
      "scripts": "dist/public/assets/js",
      "images": "dist/public/assets/img",
      "html": "dist/public"
    }
  }
}
